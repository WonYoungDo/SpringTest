<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tawny.spring.test.jstl.jstl.repository.WeatherRepository">
	<select id="selectWeather" parameterType="map" resultType="com.tawny.spring.test.jstl.jstl.domain.Weather">
		SELECT
			`id`
			, `date`
			, `weather`
			, `temperatures`
			, `precipitation`
			, `microDust`
			, `windSpeed`
			, `createdAT`
			, `updatedAT`
		FROM
			`weatherhistory`
	</select>
	
	<insert id="insertWeather" parameterType="map">
		INSERT
			`weatherhistory`
		(
			`yyyyMMdd`
			, `weather`
			, `microDust`
			, `temperatures`
			, `precipitation`
			, `windSpeed`
		)
		VALUE
		(
			#{yyyyMMdd}
			, #{weather}
			, #{microDust}
			, #{temperatures}
			, #{precipitation}
			, #{windSpeed}
		)	
	</insert>
</mapper>